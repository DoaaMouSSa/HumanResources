@using static HumanResources.Application.Dtos.DepartementDto
@model DepartmentDtoForAdd

<div class="col-md-6 grid-margin stretch-card" dir="rtl">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">قسم جديد</h4>
            <p class="card-description"> اضافة قسم جديد </p>
            <form method="post" class="forms-sample material-form">
                <div class="form-group">
                    <input asp-for="Name" />
                    <label asp-for="Name" class="control-label">اسم القسم</label>
                    <i class="bar"></i>
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <input asp-for="Description" />
                    <label asp-for="Description" class="control-label">وصف القسم</label>
                    <i class="bar"></i>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>

                <div class="button-container">
                    <button type="submit" class="button btn btn-success"><span>حفظ</span></button>
                    <a asp-controller="Department" asp-action="Index"  class="button btn btn-light">جميع الأقسام</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
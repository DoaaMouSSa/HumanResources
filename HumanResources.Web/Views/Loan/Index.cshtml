@model IEnumerable<LoanDtoForShow>

<partial name="_Toastr" />

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">  جميع السلف</h4>
            <a class="btn btn-primary btn-rounded btn-fw" asp-controller="Loan" asp-action="Create">  تأييد سلفة جديدة</a>
            @if (Model.Count() > 0)
            {
                <div class="table-responsive">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> الاسم </th>
                                <th> قيمة السلفة </th>
                                <th> الدفعات</th>
                                <th>الدفعة الواحده</th>
                                <th>المدفوع</th>
                                <th>المتبقى</th>
                                <th> الحالة</th>

                                <th> تاريخ الاضافة</th>
                                <th> تاريخ الاعتماد</th>
                               
                                <!-- <th> تعديل </th>
                                 <th> حذف </th>
                                 -->
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td>@obj.Id</td>
                                    <td> @obj.EmployeeName</td>
                                    <td> @obj.loan_amount</td>
                                    <td> @obj.numberofpayment</td>
                                    <td> @obj.payment_unit</td>
                                    <td> @obj.paid</td>
                                    <td> @obj.left</td>
                                    <td>
                                        <span class="badge @((obj.IsDone) ? "bg-success" : "bg-danger")">
                                            @((obj.IsDone) ? "معتمد" : "غير معتمد")
                                        </span>
                                    </td>
                                    <td> @obj.added_date</td>
                                    <td> @obj.done_date</td>



                                    <!--   <td>
                                        <a asp-controller="Department" asp-action="Update" asp-route-id="@obj.Id">
                                            <i class="fa fa-pencil-square-o text-primary"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-controller="Department" asp-action="Delete" asp-route-id="@obj.Id">
                                            <i class="fa fa-trash-o text-danger cursor-pointer text-bold"></i>
                                        </a>
                                    </td>  -->

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="container justify-center">
                    <partial name="_EmptyData" />
                </div>
            }
        </div>
    </div>
</div>

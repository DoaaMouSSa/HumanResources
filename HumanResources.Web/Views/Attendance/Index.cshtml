@model IEnumerable<Attendance>
@{
    int? lastEmployeeId = null; // To store the last rendered EmployeeId
}
<partial name="_Toastr" />

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">تقرير الحضور </h4>
            @if (Model.Count() > 0)
            {
                <div class="table-responsive">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="display:none;"> # </th>
                                  <th> الموظف </th>
                                 <th>السنة </th>
                                <th> الشهر </th>
                                <th>المرتب الأساسى</th>
                                <th> ايام الحضور </th>
                                <th> اليومية </th>
                                <th> صافى المرتب </th>
                                <th> التفاصيل </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td style="display:none;">@obj.Id</td>
 <td class="text-danger text-bold">
                @if (lastEmployeeId != obj.EmployeeId)
                {
                    @obj.Employee.Name
                    lastEmployeeId = obj.EmployeeId; // Update lastEmployeeId to current one
                }
                else
                {
                    @* Leave the cell empty for duplicate EmployeeId *@
                    <span></span>
                }
            </td>   
            <td> @obj.Year</td>
                                    <td> @obj.Month</td>
                                    <td> @obj.Employee.GrossSalary</td>
                                    <td> @obj.WorkingDays</td>
                                    <td> @obj.daySalary</td>
                                    <td> @obj.NetSalary</td>
                                   <td>
                                        <a asp-controller="Attendance" asp-action="Details" asp-route-id="@obj.Id">
                                            <i class="fa fa-external-link"></i>
                                        </a>
                                    </td>
                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="container justify-center">
                    <partial name="_EmptyData" />
                </div>
            }
        </div>
    </div>
</div>
